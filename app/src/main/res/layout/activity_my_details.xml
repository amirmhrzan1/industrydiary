<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My details"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
       />

        <TextView
            android:id="@+id/tvMydetailInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The information below is pulled from your QMS Account. It is not editable from within this app"
            android:textColor="@color/color_edittext"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/color_edittext"
            android:hint="@string/hint_name"
            android:paddingLeft="10dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/txtTeachingNoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_blue"
            android:text="Teaching No.:"
            android:paddingLeft="10dp"
            android:layout_marginBottom="3dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtTeachingNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/color_edittext"
            android:paddingLeft="10dp"
            android:layout_marginBottom="15dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtSchoolTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_blue"
            android:text="School:"
            android:paddingLeft="10dp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/txtSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/color_edittext"
            android:paddingLeft="10dp"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:id="@+id/txtRTOTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_blue"
            android:text="RTO:"
            android:paddingLeft="10dp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/txtRTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/color_edittext"
            android:paddingLeft="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/txtAccredTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_blue"
            android:text="Accreditations:"
            android:paddingLeft="10dp"
            android:layout_marginBottom="3dp"/>

            <LinearLayout
                android:id="@+id/linearLayoutAccred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

        <TextView
            android:id="@+id/txtEmailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_blue"
            android:text="Email:"
            android:paddingLeft="10dp"
            android:layout_marginBottom="3dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/color_edittext"
            android:paddingLeft="10dp"
            android:layout_marginBottom="15dp"
            android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>