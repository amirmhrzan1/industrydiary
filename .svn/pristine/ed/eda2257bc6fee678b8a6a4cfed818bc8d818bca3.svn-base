<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:background="@color/loginbg"
    android:id="@+id/relativeLayoutEdtContact"
   >

    <TextView
        android:id="@+id/txt_editContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Edit Industry Contact"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_editContact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="Title"
            android:paddingLeft="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"/>

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:hint="Name"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtOrganization"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:hint="Organization"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtStreetAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:hint="Street Address"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtSuburb"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="Suburb"
            android:paddingLeft="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtPostalCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Postal Code"
            android:paddingLeft="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Phone"
            android:paddingLeft="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtQualification"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:singleLine="true"
            android:inputType="textMultiLine"
            android:lines="8"
            android:paddingLeft="10dp"
            android:gravity="top|left"
            android:layout_marginBottom="12dp"
            android:hint="Qualification"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtComment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:singleLine="true"
            android:inputType="textMultiLine"
            android:lines="8"
            android:paddingLeft="10dp"
            android:gravity="top|left"
            android:layout_marginBottom="12dp"
            android:hint="Comment"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtOpportunities"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:singleLine="true"
            android:inputType="textMultiLine"
            android:lines="8"
            android:paddingLeft="10dp"
            android:gravity="top|left"
            android:layout_marginBottom="12dp"
            android:hint="Opportunities"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtActionRequired"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:singleLine="true"
            android:inputType="textMultiLine"
            android:lines="8"
            android:paddingLeft="10dp"
            android:gravity="top|left"
            android:layout_marginBottom="12dp"
            android:hint="Action Required"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edtActivityRecommendation"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:singleLine="true"
            android:inputType="textMultiLine"
            android:lines="8"
            android:paddingLeft="10dp"
            android:layout_marginBottom="12dp"
            android:gravity="top|left"
            android:hint="Action Recommendation"
            android:background="@drawable/rounded_edittext"/>

        <Button android:id="@+id/btnEdit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_save"
            android:background="@color/button"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
    </ScrollView>
        </RelativeLayout>
