<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashScreen"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/screen_bg"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/industry_engement_diary"
        android:paddingTop="55dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/vet_teacher"
        android:paddingTop="40dp"
        android:paddingBottom="60dp"
        android:layout_below="@id/app_logo"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:background_progressbar_color="#FFCDD2"
        app:background_progressbar_width="3dp"
        app:progressbar_color="#F44336"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        app:progressbar_width="3dp" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/nsw"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="10dp"
       android:layout_alignParentBottom="true"/>
</RelativeLayout>
