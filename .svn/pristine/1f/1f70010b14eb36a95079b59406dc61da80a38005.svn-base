<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:id="@+id/linearLayoutLogin"
    android:background="@drawable/screen_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/txt_editContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="92dp"
        android:src="@drawable/logo"
        />


        <TextView
            android:id="@+id/loginInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginInfo"
            android:textColor="@color/white"
           android:gravity="center"
           />

        <EditText
            android:id="@+id/edt_userName"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:singleLine="true"
            android:hint="@string/hint_username"
            android:alpha="0.3"
            android:textColorHint="@color/white"
            android:paddingLeft="15dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"
            android:background="@color/edtLogin"
        />


        <EditText
            android:id="@+id/edt_Pin"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:inputType="numberPassword"
            android:hint="@string/hint_pin"
            android:textColorHint="@color/white"
            android:paddingLeft="15dp"
            android:alpha="0.3"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@color/edtLogin"
          />


        <EditText
            android:id="@+id/edt_Identifier"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:inputType="numberPassword"
            android:hint="@string/hint_identifier"
            android:textColorHint="@color/white"
            android:paddingLeft="15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@color/edtLogin"
            android:visibility="gone"
           />


    <Button android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:text="@string/btn_login"
        android:textSize="20dp"
        android:background="@drawable/rounded_login_button"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        />
    </LinearLayout>

</LinearLayout>