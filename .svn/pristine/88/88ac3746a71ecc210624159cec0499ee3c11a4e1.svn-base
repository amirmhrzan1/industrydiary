<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_editContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="My Details"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"/>

        <EditText
            android:id="@+id/edt_Name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="@string/hint_name"
            android:paddingLeft="10dp"
            android:editable="false"
            android:clickable="false"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edt_TeachinNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="@string/hint_tachingNo"
            android:paddingLeft="10dp"
            android:editable="false"
            android:clickable="false"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edt_school"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="@string/hint_school"
            android:paddingLeft="10dp"
            android:editable="false"
            android:clickable="false"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edt_RTO"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="@string/hint_Rto"
            android:paddingLeft="10dp"
            android:editable="false"
            android:clickable="false"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edt_accreditaitons"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="@string/hint_accreditaitons"
            android:paddingLeft="10dp"
            android:editable="false"
            android:clickable="false"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_edittext"/>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="@string/hint_email"
            android:paddingLeft="10dp"
            android:editable="false"
            android:clickable="false"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_edittext"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>