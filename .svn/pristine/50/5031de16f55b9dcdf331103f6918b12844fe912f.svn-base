<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_margin="0dp"
    android:padding="0dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:descendantFocusability="blocksDescendants">
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18/8/15"
            android:paddingBottom="3dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/txt_reference_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reference Title"
            android:textColor="@color/ref_title"
            android:paddingBottom="3dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <TextView
            android:id="@+id/txt_accreditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accreditations: "
            android:textSize="10sp"
            android:textColor="@color/black"
            />

            <TextView
                android:id="@+id/txt_accreditationNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="10sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="|"
                android:textColor="@color/black"
               />

            <TextView
                android:id="@+id/txt_hourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No.of Hourse:  "
                android:textSize="10sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/txt_hourseNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="10sp"
                android:textColor="@color/black"
                />


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow"
        android:layout_centerVertical="true"
        android:paddingRight="15dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_centerVertical="true"
        android:text="IN PROGRESS"
        android:paddingRight="10dp"
        android:textColor="@color/black"
       />


</RelativeLayout>