    private Builder initAlertDialog(String title, String msg) {
        Builder builder = new Builder(context);
        if (title.isEmpty()) {
            title = context.getResources().getString(R.string.app_name);
        }
        builder.setTitle(title);
        builder.setMessage(msg);
        return builder;
    }

