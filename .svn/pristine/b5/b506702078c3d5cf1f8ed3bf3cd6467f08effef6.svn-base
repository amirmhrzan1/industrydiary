<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:background="@color/loginbg"
    android:id="@+id/relativeLayoutAddContact"
    >

    <TextView
        android:id="@+id/txt_addContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add Industry Contact"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_addContact">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:hint="Name"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:hint="Title"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtOrganization"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:hint="Organization"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtStreetAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:hint="Street Address"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtSuburb"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:hint="Suburb"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtPostalCode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:hint="Postal Code"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:hint="Phone"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtQualification"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:hint="Qualification"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtComment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:hint="Comment"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtOpportunities"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:singleLine="true"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:paddingLeft="10dp"
                    android:hint="Opportunities"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtActionRequired"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:singleLine="true"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:paddingLeft="10dp"
                    android:hint="Action Required"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/edtActivityRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:singleLine="true"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:paddingLeft="10dp"
                    android:hint="Action Recommendation"
                    android:background="@drawable/rounded_edittext"/>
            </android.support.design.widget.TextInputLayout>

            <Button android:id="@+id/btnAdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:background="@color/button"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
