<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:paddingTop="50dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/dark_blue"
        android:gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

    <TextView
        android:id="@+id/txtSyncOverWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sync over Wifi only"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        />

        <Switch
            android:id="@+id/toggleSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/txtDisconnectAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disconnect Account"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            />

        <Switch
            android:id="@+id/toggleDisconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/txtAboutApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About this app"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/txtTermsConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/termsConditions"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            />

    </RelativeLayout>

</LinearLayout>